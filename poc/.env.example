# Baremetal Automation - Environment Configuration
# Copy this file to .env and fill in your values

# NetBox Configuration
NETBOX_URL=http://netbox.example.com
NETBOX_TOKEN=your-netbox-api-token-here
NETBOX_TENANT=baremetal-staging

# iLO Configuration
ILO_DEFAULT_USER=Administrator
ILO_DEFAULT_PASSWORD=your-ilo-password-here

# Callback API URL (accessible from PXE-booted servers)
CALLBACK_API_URL=http://10.1.100.5:5000

# Monitoring Interval (seconds)
MONITORING_INTERVAL_SECONDS=300

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# Redis TLS (optional - for production)
# PKI lives outside the repo at <repo-root>/../pki/
REDIS_USE_TLS=false
REDIS_TLS_CERT=/path/to/pki/workers/worker-cert.pem
REDIS_TLS_KEY=/path/to/pki/workers/worker-key.pem
REDIS_TLS_CA=/path/to/pki/ca/ca-cert.pem

# Anthropic API (for chatbot portal)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Vapi voice integration (https://vapi.ai)
# VAPI_PUBLIC_KEY — from Vapi dashboard → Account → Public Key
# VAPI_SERVER_URL — public URL Vapi can reach to call /api/vapi (e.g. https://yourhost.com or ngrok URL)
VAPI_PUBLIC_KEY=your-vapi-public-key-here
VAPI_SERVER_URL=https://your-public-host-or-ngrok-url
